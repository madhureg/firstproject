{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adfDemoMadhur"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/copydata_sql_sql_tables')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "SqlServerSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "parametrised_SqlServer_dataset",
								"type": "DatasetReference",
								"parameters": {
									"tableName": {
										"value": "@pipeline().parameters.tableNamefrompipeline",
										"type": "Expression"
									},
									"dbNameDataset": {
										"value": "@pipeline().parameters.dbNamefrompipeline",
										"type": "Expression"
									},
									"serverName": {
										"value": "@pipeline().parameters.serverNamesource",
										"type": "Expression"
									},
									"userName": {
										"value": "@pipeline().parameters.userNameSource",
										"type": "Expression"
									},
									"password": {
										"value": "@pipeline().parameters.passwordSource",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "parametrised_SqlServer_dataset",
								"type": "DatasetReference",
								"parameters": {
									"tableName": {
										"value": "@pipeline().parameters.tableNamefrompipeline",
										"type": "Expression"
									},
									"dbNameDataset": {
										"value": "@pipeline().parameters.dbNamefrompipeline",
										"type": "Expression"
									},
									"serverName": {
										"value": "@pipeline().parameters.serverNameDestination",
										"type": "Expression"
									},
									"userName": {
										"value": "@pipeline().parameters.userNameDestination",
										"type": "Expression"
									},
									"password": {
										"value": "@pipeline().parameters.passwordDestination",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"tableNamefrompipeline": {
						"type": "String"
					},
					"dbNamefrompipeline": {
						"type": "String"
					},
					"serverNamesource": {
						"type": "String"
					},
					"userNameSource": {
						"type": "String"
					},
					"passwordSource": {
						"type": "String"
					},
					"serverNameDestination": {
						"type": "String"
					},
					"userNameDestination": {
						"type": "String"
					},
					"passwordDestination": {
						"type": "String"
					}
				},
				"annotations": [],
				"lastPublishTime": "2021-09-20T00:50:16Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/parametrised_SqlServer_dataset')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/parametrised_SqlServer_dataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "parametrised_SqlServer",
					"type": "LinkedServiceReference",
					"parameters": {
						"dbName": {
							"value": "@dataset().dbNameDataset",
							"type": "Expression"
						},
						"serverName": {
							"value": "@dataset().serverName",
							"type": "Expression"
						},
						"userName": {
							"value": "@dataset().userName",
							"type": "Expression"
						},
						"password": {
							"value": "@dataset().password",
							"type": "Expression"
						}
					}
				},
				"parameters": {
					"tableName": {
						"type": "string"
					},
					"dbNameDataset": {
						"type": "string"
					},
					"serverName": {
						"type": "string"
					},
					"userName": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [],
				"typeProperties": {
					"schema": "dbo",
					"table": {
						"value": "@dataset().tableName",
						"type": "Expression"
					}
				}
			},
			"dependsOn": []
		}
	]
}